{
    "swagger": "2.0",
    "info": {
        "description": "大家可以在此页面做服务端接口的测试啦",
        "title": "项目测试页"
    },
    "host": "localhost:8080/SuperWeChatServerV2.0",
    "tags": [
        {
            "name": "superwechat",
            "description": "所有接口",
            "externalDocs": {
                "description": "Find out more",
                "url": "http://swagger.io"
            }
        },
        {
            "name": "store",
            "description": "访问宠物商店订单！"
        },
        {
            "name": "user",
            "description": "操作用户相关！",
            "externalDocs": {
                "description": "Find out more about our store",
                "url": "http://swagger.io"
            }
        }
    ],
    "schemes": [
        "http"
    ],
    "paths": {
        "/getServerStatus": {
            "get": {
                "tags": [
                    "superwechat"
                ],
                "summary": "获取服务端状态",
                "description": "在首次连接服务端获取数据直接使用，用来检测客户端与服务端的连接状态。",
				"author": "cloudream 2016年7月4日17:47:19"
            }
        },
        "/register": {
            "post": {
                "tags": [
                   "superwechat"  
                ],
                "summary": "新用户注册",
                "description": "将新用户信息及头像使用POST提交到服务器，完成新用户的注册。",
                "author": "cloudream 2016年7月4日19:32:22",
                "produces": [
                    "application/xml",
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "m_user_name",
                        "in": "query",
                        "description": "账号",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "m_user_nick",
                        "in": "query",
                        "description": "昵称",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "m_user_password",
                        "in": "query",
                        "description": "密码",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "file",
                        "in": "formData",
                        "description": "所要上传的头像",
                        "required": false,
                        "type": "file"
                    }
                ]
            }
        },
        "/unregister":{
            "get": {
                "tags": [
                   "superwechat"  
                ],
                "summary": "取消注册",
                "description": "在客户端注册新用户时候，环信服务器注册失败需要将远端提交注册的新用户数据及图片删除",
                "author": "cloudream 2016年7月5日16:46:38",
                "produces": [
                    "application/xml",
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "m_user_name",
                        "in": "query",
                        "description": "账号",
                        "required": true,
                        "type": "string"
                    }
                ]
            }
        },
        "/login":{
            "get": {
                "tags": [
                   "superwechat"  
                ],
                "summary": "用户登录",
                "description": "使用用户账号和密码登录服务端,服务器完成用户名和密码的校验逻辑",
                "author": "cloudream 2016年7月5日16:36:11",
                "produces": [
                    "application/xml",
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "m_user_name",
                        "in": "query",
                        "description": "账号",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "m_user_password",
                        "in": "query",
                        "description": "密码",
                        "required": true,
                        "type": "string"
                    }
                ]
            }
        },
        "/downloadAvatar":{
            "get": {
                "tags": [
                   "superwechat"  
                ],
                "summary": "下载头像",
                "description": "提供头像数据，供客户端下载",
                "author": "cloudream 2016年7月5日16:58:13",
                "produces": [
                    "application/xml",
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "name_or_hxid",
                        "in": "query",
                        "description": "用户的账号或群组的环信id",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "avatarType",
                        "in": "query",
                        "description": "头像类型",
                        "required": true,
                        "type": "array",
                        "items": {
                            "type": "string",
                            "enum": [
                                "user_avatar",
                                "group_icon"
                            ]
                        }
                    },
                    {
                        "name": "width",
                        "in": "query",
                        "description": "头像宽度",
                        "required": true,
                        "type": "integer"
                    },
                    {
                        "name": "height",
                        "in": "query",
                        "description": "头像高度",
                        "required": true,
                        "type": "integer"
                    }
                ]
            }
        },
        "/updateAvatar":{
            "post": {
                "tags": [
                   "superwechat"  
                ],
                "summary": "更新用户头像",
                "description": "客户端传入新图片，服务器接收新图片覆盖老图片同时将数据库更新",
                "author": "cloudream 2016年7月5日17:50:46",
                "produces": [
                    "application/xml",
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "name_or_hxid",
                        "in": "query",
                        "description": "用户的账号或群组的环信id",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "avatarType",
                        "in": "query",
                        "description": "头像类型",
                        "required": true,
                        "type": "array",
                        "items": {
                            "type": "string",
                            "enum": [
                                "user_avatar",
                                "group_icon"
                            ]
                        }
                    },
                    {
                        "name": "file",
                        "in": "formData",
                        "description": "所要上传的头像用于更新头像",
                        "required": false,
                        "type": "file"
                    }
                ]
            }
        },
         "/updateNick":{
            "get": {
                "tags": [
                   "superwechat"  
                ],
                "summary": "更新用户昵称",
                "description": "客户端传来用户名和新昵称，服务端根据用户名更新昵称为新昵称的值",
                "author": "cloudream 2016年7月5日18:14:03",
                "produces": [
                    "application/xml",
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "m_user_name",
                        "in": "query",
                        "description": "用户账号",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "m_user_nick",
                        "in": "query",
                        "description": "用户新昵称",
                        "required": true,
                        "type": "string"
                    }
                ]
            }
        }
    },
    "securityDefinitions": {
        "petstore_auth": {
            "type": "oauth2",
            "authorizationUrl": "http://petstore.swagger.io/api/oauth/dialog",
            "flow": "implicit",
            "scopes": {
                "write:pets": "modify pets in your account",
                "read:pets": "read your pets"
            }
        },
        "api_key": {
            "type": "apiKey",
            "name": "api_key",
            "in": "header"
        }
    }
}